@model Walmart.Entidades.Cidade

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Cidade</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.CodCidade)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CodCidade)
            @Html.ValidationMessageFor(model => model.CodCidade)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CodEstado)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.CodEstado, new SelectList(ViewBag.ListaEstado, "CodEstado", "Nome"))
            @Html.ValidationMessageFor(model => model.CodEstado)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Capital)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Capital)
            @Html.ValidationMessageFor(model => model.Capital)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
